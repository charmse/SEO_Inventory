         <div class="modal-content">
            <div class="modal-header">
               <span class="editItemClose">&times;</span>
               <h2>Edit Item</h2>
            </div>
            <form class="EItem" action="/editItem" method="post">
               Item Name <br>
               <select name="itemName" /> <br>
               <% for (var i = 0; i < user.length;i++) { %>
               <option><%= user[i].itemName %></option> 
                <% } %>
               </select>
               <br>price<br>
               <input type="number" min="0" name="price" /><br>
               Quantity <br>
